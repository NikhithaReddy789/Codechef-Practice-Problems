import java.util.*;
import java.lang.*;
import java.io.*;

/* Code By Nikhitha Singireddy
code written in Java */
class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner IP=new Scanner(System.in);
		int T=IP.nextInt();
		for(int i=0;i<T;i++){
		    int IPE=IP.nextInt();
		    int PL=IP.nextInt();
		    int PE=IP.nextInt();
		    int TP=IPE-PL+PE;
		    System.out.println(TP);
		}
		IP.close();
	}
}
