import java.util.*;
import java.lang.*;
import java.io.*;

/* Language Used is Java
Code written by Nikhitha Singireddy */

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner IP=new Scanner(System.in);
		int T=IP.nextInt();
		for(int i=0;i<T;i++){
		    int DB=IP.nextInt();
		    int TB=IP.nextInt();
		    if(DB*3>TB*2){
		        System.out.println(TB*2);
		    }
		    else{
		        System.out.println(DB*3);
		    }
		}
		IP.close();
	}
}
